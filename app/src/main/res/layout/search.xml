<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nikosoft.soldierfinder.Search">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/search_lay_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bg_toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/search_lay_appbar">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/search_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="50dp">


                <smtchahal.materialspinner.MaterialSpinner
                    android:id="@+id/sp_search_cur_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:ms_baseColor="@android:color/white"
                    app:ms_enableFloatingLabel="true"
                    app:ms_floatingLabelColor="@color/colorDarkAccent"
                    app:ms_floatingLabelText="استانی که میخوای خدمت کنی"
                    app:ms_hint="    استانی که میخوای خدمت کنی"
                    app:ms_hintColor="@color/colorPrimary"
                    app:ms_isRtl="true" />

                <smtchahal.materialspinner.MaterialSpinner
                    android:id="@+id/sp_search_cur_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:ms_baseColor="@android:color/white"
                    app:ms_enableFloatingLabel="true"
                    app:ms_floatingLabelColor="@color/colorDarkAccent"
                    app:ms_floatingLabelText="شهری که میخوای خدمت کنی"
                    app:ms_hint="    شهری که میخوای خدمت کنی"
                    app:ms_hintColor="@color/colorPrimary"
                    app:ms_isRtl="true" />


                <smtchahal.materialspinner.MaterialSpinner
                    android:id="@+id/sp_search_req_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:ms_baseColor="@android:color/white"
                    app:ms_enableFloatingLabel="true"
                    app:ms_floatingLabelColor="@color/colorDarkAccent"
                    app:ms_floatingLabelText="استانی که داری خدمت میکنی"
                    app:ms_hint="    استانی که داری خدمت میکنی"
                    app:ms_hintColor="@color/colorPrimary"
                    app:ms_isRtl="true" />

                <smtchahal.materialspinner.MaterialSpinner
                    android:id="@+id/sp_search_req_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:ms_baseColor="@android:color/white"
                    app:ms_enableFloatingLabel="true"
                    app:ms_floatingLabelColor="@color/colorDarkAccent"
                    app:ms_floatingLabelText="شهری که داری خدمت میکنی"
                    app:ms_hint="    شهری که داری خدمت میکنی"
                    app:ms_hintColor="@color/colorPrimary"
                    app:ms_isRtl="true" />


                <smtchahal.materialspinner.MaterialSpinner
                    android:id="@+id/sp_search_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:ms_baseColor="@android:color/white"
                    app:ms_enableFloatingLabel="true"
                    app:ms_floatingLabelColor="@color/colorDarkAccent"
                    app:ms_floatingLabelText="درجه"
                    app:ms_hint="    درجه"
                    app:ms_hintColor="@color/colorPrimary"
                    app:ms_isRtl="true" />

                <smtchahal.materialspinner.MaterialSpinner
                    android:id="@+id/sp_search_organ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:ms_baseColor="@android:color/white"
                    app:ms_enableFloatingLabel="true"
                    app:ms_floatingLabelColor="@color/colorDarkAccent"
                    app:ms_floatingLabelText="ارگان"
                    app:ms_hint="    ارگان"
                    app:ms_hintColor="@color/colorPrimary"
                    app:ms_isRtl="true" />

                <smtchahal.materialspinner.MaterialSpinner
                    android:id="@+id/sp_search_suborgan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:ms_baseColor="@android:color/white"
                    app:ms_enableFloatingLabel="true"
                    app:ms_floatingLabelColor="@color/colorDarkAccent"
                    app:ms_floatingLabelText="نیروی ارگان"
                    app:ms_hint="    نیروی ارگان"
                    app:ms_hintColor="@color/colorPrimary"
                    app:ms_isRtl="true" />

            </LinearLayout>



    </androidx.core.widget.NestedScrollView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lay_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/lay_ripple"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mrl_rippleOverlay="true">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/colorPrimary"
                android:text="جستجو"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>
</RelativeLayout>
